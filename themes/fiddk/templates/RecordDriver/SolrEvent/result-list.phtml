<?php
  $heading = $this->driver->getTitle();
  if (empty($heading)) {
    $heading = $this->translate('Heading unavailable.');
  }
  $lang = $this->plugin('translate')->getTranslator()->getLocale();

  $coverDetails = $this->record($this->driver)->getCoverDetails('result-list', 'medium', $this->recordLinker()->getUrl($this->driver));
  $cover = $coverDetails['html'];
  $thumbnail = false;
  $thumbnailAlignment = $this->record($this->driver)->getThumbnailAlignment('result');
  if ($coverDetails['cover']):
    ob_start(); ?>
      <div class="media-<?=$thumbnailAlignment ?> <?=$this->escapeHtmlAttr($coverDetails['size'])?>">
       <?=$cover ?>
      </div>
    <?php $thumbnail = ob_get_contents();
    ob_end_clean();?>
    <?php endif; ?>
    <div class="media">
    <?php if ($thumbnail): ?>
      <?=$thumbnail ?>
    <?php endif ?>

  <div class="media-body">
    <div class="resultItemLine1">
      <a href="<?=$this->recordLinker()->getUrl($this->driver)?>" class="title"><?=$this->escapeHtml($heading)?></a>
    </div>
    <?php $eventTypes = $this->driver->getEventType();
          $eventGenres = $this->driver->getGenres();?>
    <div class="resultItemLine2">
      <?php foreach ($eventTypes as $type): ?>
        <?=$this->escapeHtml($type)?>
      <?php endforeach; ?>
    </div>
    <div class="resultItemLine3">
        <?=$this->escapeHtml(implode('; ', $eventGenres))?>
    </div>
    <?php $places = $this->driver->getEventPlace(); $dates = $this->driver->getEventDate();?>
    <?php if ($places || $dates): ?>
      <div class="resultItemLine4">
        <?php if ($places && $dates): ?>
          <?php $normDates = [];?>
          <?php foreach ($dates as $date): ?>
            <?php $normDates[] = $this->driver->translateDate($date, $lang)?>
          <?php endforeach; ?>
          <?=$this->escapeHtml(implode(', ', $places)) . ', ' . $this->escapeHtml(implode(', ', $normDates))?>
        <?php else : ?>
        <?php if ($places): ?>
          <?=$this->escapeHtml(implode(', ', $places))?>
        <?php else: ?>
          <?php $normDates = [];?>
          <?php foreach ($dates as $date): ?>
            <?php $normDates[] = $this->driver->translateDate($date, $lang)?>
          <?php endforeach; ?>
          <?=$this->escapeHtml(implode(', ', $normDates))?>
        <?php endif; ?>
      <?php endif; ?>
      </div>
    <?php endif; ?>
  </div>
</div>
